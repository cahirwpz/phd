  Implementation ==> add
    booleanType () == [[['Boolean], []]$APP]
    integerType () == [[['Integer], []]$APP]
    floatType () == [[['DoubleFloat], []]$APP]
    mappingType (args, type) == [[args, type]$MT]
    stringType () == [[['String], []]$APP]
    voidType () == [[['Void], []]$APP]
