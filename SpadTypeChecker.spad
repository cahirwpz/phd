    Rep := Record(ni_index : NNI,
                  ni_node : N,
                  ni_rule : TCR,
                  ni_type : N,
                  ni_env : ENV,
                  ni_done : Boolean)

    import SpadNode
    import Printer
    import TypeUnifier
    import SpadNodeFactory

    elt (x, "index") == x.ni_index
    elt (x, "node") == x.ni_node
    elt (x, "rule") == x.ni_rule
    elt (x, "type") == x.ni_type
    elt (x, "env") == x.ni_env
    elt (x, "done") == x.ni_done

    setelt! (x, "node", n) ==
      x.ni_node := n
    setelt! (x, "rule", r) ==
      x.ni_rule := r
    setelt! (x, "type", ts) ==
      x.ni_type := ts
    setelt! (x, "env", env) ==
      x.ni_env := env
    setelt! (x, "done", d) ==
      x.ni_done := d

    construct (i, n) ==
      [i, n, newRule(), emptyNode(), new(), false] $ Rep

    substitute! (subst, x) ==
      x.type := substitute(x.type, subst)

    done? x ==
      x.ni_done

    children x ==
      children x.rule

    nodeRef x ==
      nodeRef x.index

    typeRef x ==
      typeVar x.index

    coerce x ==
      done := if done? x then green("(+)" :: PF) else red("(-)" :: PF)
      prefix := hconcat [done, right(4, number(x.index) :: PF)]
      not empty? x.rule =>
        spaces([prefix, x.rule :: PF, "is" :: PF, bold (x.type :: PF)])
      node :=
        value? x.node =>
          bold(x.node :: PF)
        typeExpr? x.node and value? (x.node :: TE).expr =>
          bold((x.node :: TE).expr :: PF)
        function? x.node =>
          fn := x.node :: FN
          bold cyan(fn.name :: PF)
        bold red("?" :: PF)
      import? x.node =>
        spaces [prefix, "import" :: PF, bold (x.type ::PF)]
