  NNI ==> NonNegativeInteger
  N ==> SpadNode
  APP ==> SpadApply(N)
  MR ==> SpadMarker(N)
  MT ==> SpadMappingType(N)

  Exports ==> with
    booleanType : () -> N
    integerType : () -> N
    floatType : () -> N
    mappingType : (List(N), N) -> N
    stringType : () -> N
    voidType : () -> N
