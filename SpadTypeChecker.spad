      -- capture x in closure, so that we don't need to expose TCNA type to
      -- SpadTreeFillInTypes
      findTypeNode := ((path : MP) : TN +-> node(x, path))

      root := node(x, 1)
      root.node := rewrite(root.node)$SpadTreeFillInTypes(findTypeNode)

