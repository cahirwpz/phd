        -- previous meta-step
        newP := countProgress x
        correct :=
          newP.a < p.a => true
          newP.a = p.a and newP.b < p.b => true
          false
        not correct =>
          fail (x :: PF)
          error "Type checker does not advance by applying known typing rules!"

        -- setup new meta-step
        p := newP
        q := newQ
        s := s + 1

