    elt : (%, "node") -> N
    elt : (%, "rule") -> TCR
    elt : (%, "type") -> N
    elt : (%, "env") -> ENV
    elt : (%, "done") -> Boolean

    setelt! : (%, "rule", TCR) -> TCR
    setelt! : (%, "type", N) -> N
    setelt! : (%, "node", N) -> N
    setelt! : (%, "env", ENV) -> ENV
    setelt! : (%, "done", Boolean) -> Boolean

    construct : (NNI, N) -> %
    substitute! : (SUBST, %) -> Void
    done? : % -> Boolean

