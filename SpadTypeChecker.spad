  CE ==> SpadCondExpr(N)
  MR ==> SpadMarker(N)

  PF ==> PrintableForm
  NNI ==> NonNegativeInteger

  Exports ==> CoercibleTo(PrintableForm) with
    newRule : () -> %
    newRule : (List(N), N) -> %

    empty? : % -> Boolean
    entries : % -> List(N)
    children : % -> List(NNI)

